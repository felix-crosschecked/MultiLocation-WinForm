<Window x:Class="MultiLocation.Loggin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiLocation"
        mc:Ignorable="d"
        Title="Loggin" Height="250" Width="500"
        WindowStartupLocation="CenterScreen">
    

    <Grid>
        <TextBox x:Name="txtUtilisateur" HorizontalAlignment="Center" Margin="0,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Center" Margin="0,117,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Nom d'utilisateur :" HorizontalAlignment="Left" Margin="56,76,0,0" VerticalAlignment="Top" Width="109"/>
        <Label Content="Mot de passe :" HorizontalAlignment="Left" Margin="56,117,0,0" VerticalAlignment="Top" Width="109"/>
        <Button Content="Se connecter" HorizontalAlignment="Left" Height="21" Margin="190,173,0,0" VerticalAlignment="Top" Width="91" Click="Button_Click"/>

    </Grid>
</Window>
